---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

export interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="preload"
			as="font"
			href="/nunito.regular.woff2"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			as="image"
			href="https://res.cloudinary.com/josttme/image/upload/c_fill,h_400,q_50,w_400/v1680077655/1677776757174_xpyblh.webp"
		/>
		<link
			rel="preload"
			as="image"
			type="image/png"
			href="https://res.cloudinary.com/josttme/image/upload/v1706902466/jostt.me/images/logo/logojosttme.png"
		/>
		<meta
			name="description"
			content="Soy Josue Tapia, desarrollador Front-end especializado en JavaScript. Con experiencia en tecnologÃ­as como HTML, CSS, JavaScript, React y TailwindCSS"
		/>
		<link
			rel="icon"
			type="image/png"
			href="https://res.cloudinary.com/josttme/image/upload/v1706902466/jostt.me/images/logo/logojosttme.png"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		style="background-color: #000021; color: #95959f; font-family: 'Nunito', system-ui, sans-serif;"
	>
		<div class="glas"></div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'Nunito';
		font-style: normal;
		src: url('/nunito.regular.woff2') format('woff2');
		font-display: swap;
		priority: true;
	}
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	.glas {
		background: rgb(0 153 255/0.1);
		filter: blur(100px);
		width: 300px;
		height: 300px;
		position: fixed;
		transform: translate(-50%, -50%);
		left: 50%;
		top: 50%;
		top: 230px;
		z-index: -1;
	}
</style>
